<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_alignParentBottom="true">
			    <LinearLayout android:id="@+id/bg_layout"
			      			  android:layout_width="fill_parent"
							  android:layout_height="wrap_content"
							  android:layout_alignParentBottom="true">
			    			<ImageView android:id="@+id/selected_bg_view"
			  						   android:layout_width="wrap_content"
			  						   android:layout_height="wrap_content"
			  						   android:src="@drawable/selecticon"
			  						   />
			    </LinearLayout>
			    <LinearLayout android:id="@+id/button_layout"
			    			  android:layout_width="fill_parent"
							  android:layout_height="wrap_content"
							  android:layout_alignParentBottom="true"
							  android:gravity="center">
						    				<ImageButton android:id="@+id/chatButton"
				 					 	     		     android:layout_width="123px"
				 					 	     		     android:layout_height="121px"
				 					 	     		     android:layout_weight="1"
				 					 	     		     android:focusable="true"
				 					 	     		     android:background="#00000000"
				 					 	     		     android:src="@drawable/chat_font_btn_selected"
				 					 	     		     android:scaleType="center"
					 					 	     		 />
											<ImageButton android:id="@+id/friendButton"
				 					 	     		     android:layout_width="123px"
				 					 	     		     android:layout_height="121px"
				 					 	     		     android:layout_weight="1"
				 					 	     		     android:focusable="true"
				 					 	     		     android:background="#00000000"
				 					 	     		     android:src="@drawable/friend_font_btn"
				 					 	     		     android:scaleType="center"
					 					 	     		 />
											<ImageButton android:id="@+id/searchButton"
				 					 	     		     android:layout_width="123px"
				 					 	     		     android:layout_height="121px"
				 					 	     		     android:layout_weight="1"
				 					 	     		     android:focusable="true"
				 					 	     		     android:background="#00000000"
				 					 	     		     android:src="@drawable/search_font_btn"
				 					 	     		     android:scaleType="center"
	 					 	     		   				 />
			</LinearLayout>
</RelativeLayout>