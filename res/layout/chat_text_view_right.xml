<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chat_text_layout_right"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    >

    <ImageView 
        android:id="@+id/profilePhote_imgView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:contentDescription="@string/talkIm"
        />
    
    <TextView
        android:id="@+id/chat_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profilePhote_imgView"
        android:layout_toLeftOf="@id/profilePhote_imgView"
        android:background="@drawable/chatting_text_view_right_bg"
        android:maxLength="50"
        android:padding="8dp"
        android:textColor="#FFFFFFFF"
        android:textSize="15sp" />

</RelativeLayout>