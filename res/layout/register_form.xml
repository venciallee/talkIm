<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <include layout="@layout/top_title"/>
    	<RelativeLayout android:layout_width="match_parent"
    					android:layout_height="match_parent"
    					android:layout_below="@+id/talkImTop"
						android:layout_above="@+id/talkImChoiceBtn"
						android:background="#ffff" android:id="@+id/relativeLayout1">
						
						<EditText android:layout_width="wrap_content" 
								  android:layout_height="wrap_content" 
								  android:inputType="textPersonName" 
								  android:id="@+id/register_username_edit_text" 
								  android:background="@drawable/input_field_bg"
								  android:layout_centerHorizontal="true"
								  android:layout_marginTop="80dip"
								  android:text="username"
								  android:textColor="#ffff"
								  android:textSize="15dip"
								  android:singleLine="true"
								  android:paddingLeft="5dip">
								<requestFocus />
						</EditText>
						<ImageView android:id="@+id/login_input_username"
								   android:layout_width="wrap_content"
								   android:layout_height="wrap_content"
								   android:scaleType="center"
								   android:src="@drawable/login_input_username"
								   android:layout_centerVertical="true"
								   android:layout_below="@id/register_username_edit_text"
								   android:layout_alignLeft="@id/register_username_edit_text"
								   android:paddingTop="5dip"
								   />
						<EditText android:layout_width="wrap_content" 
								  android:layout_height="wrap_content" 
								  android:inputType="textPassword" 
								  android:id="@+id/register_password_edit_text" 
								  android:layout_centerHorizontal="true"
								  android:background="@drawable/input_field_bg"
								  android:layout_below="@id/login_input_username"
								  android:layout_marginTop="10dip"
								  android:text="password"
								  android:password="true"
								  android:textColor="#ffff"
								  android:textSize="15dip"
								  android:singleLine="true"
								  android:paddingLeft="5dip"
								  >
						</EditText>
						<ImageView android:id="@+id/login_input_password"
								   android:layout_width="wrap_content"
								   android:layout_height="wrap_content"
								   android:scaleType="center"
								   android:src="@drawable/login_input_password"
								   android:layout_centerVertical="true"
								   android:layout_below="@id/register_password_edit_text"
								   android:layout_alignLeft="@id/register_password_edit_text"
								   android:paddingTop="5dip"
								   />
						<EditText android:layout_width="wrap_content"
								  android:layout_height="wrap_content"
								  android:id="@+id/register_name_edit_text"
								  android:layout_centerHorizontal="true"
								  android:layout_below="@id/login_input_password"
								  android:inputType="textPersonName"
								  android:background="@drawable/input_field_bg"
								  android:text="name"
								  android:textColor="#ffff"
								  android:textSize="15dip"
								  android:singleLine="true"
								  android:layout_marginTop="10dip"
								  android:paddingLeft="5dip"/>
						<ImageView android:id="@+id/register_input_name"
								   android:layout_width="wrap_content"
								   android:layout_height="wrap_content"
								   android:scaleType="center"
								   android:src="@drawable/register_input_name"
								   android:layout_centerVertical="true"
								   android:layout_below="@id/register_name_edit_text"
								   android:layout_alignLeft="@id/register_password_edit_text"
								   android:paddingTop="5dip"
								   />
						<ImageButton android:id="@+id/register_button"
									 android:layout_width="wrap_content"
									 android:layout_height="wrap_content"
									 android:scaleType="center"
									 android:src="@drawable/register_button"
									 android:background="#00000000"
									 android:layout_centerHorizontal="true"
									 android:layout_below="@id/register_input_name"
									 android:layout_alignLeft="@id/password_edit_text"
									 android:paddingTop="20dip"
									 />
		</RelativeLayout>
	<include layout="@layout/buttom_buttons_bg"/>
	<include layout="@layout/buttom_buttons"/>
</RelativeLayout>