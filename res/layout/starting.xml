<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <include layout="@layout/top_title"/>
    	<RelativeLayout android:layout_width="match_parent"
    					android:layout_height="match_parent"
    					android:layout_below="@+id/talkImTop"
						android:layout_above="@+id/talkImChoiceBtn"
						android:background="#ffff">
						<ImageView android:id="@+id/login_register_content_font"
								   android:layout_width="wrap_content"
								   android:layout_height="wrap_content"
								   android:src="@drawable/login_register_content_font"
								   android:scaleType="center"
								   android:layout_alignParentTop="true"
								   android:layout_centerInParent="true"
								   android:paddingTop="70dip"/>
						<ImageButton android:id="@+id/register_button"
									 android:layout_width="wrap_content"
									 android:layout_height="wrap_content"
									 android:scaleType="center"
									 android:src="@drawable/register_button"
									 android:background="#00000000"
									 android:layout_centerInParent="true"
									 />
						<ImageView android:id="@+id/login_register_newer_text"
								   android:layout_width="wrap_content"
								   android:layout_height="wrap_content"
								   android:scaleType="center"
								   android:src="@drawable/login_register_newer_text"
								   android:layout_centerVertical="true"
								   android:layout_below="@id/register_button"
								   android:layout_alignLeft="@id/register_button"
								   android:paddingTop="10dip"
								   />
						<ImageButton android:id="@+id/login_button"
									 android:layout_width="wrap_content"
									 android:layout_height="wrap_content"
									 android:scaleType="center"
									 android:src="@drawable/login_button"
									 android:background="#00000000"
									 android:layout_centerInParent="true"
									 android:layout_below="@id/login_register_newer_text"
									 android:paddingTop="20dip"
									 />
						<ImageView android:id="@+id/login_register_order_text"
								   android:layout_width="wrap_content"
								   android:layout_height="wrap_content"
								   android:scaleType="center"
								   android:src="@drawable/login_register_older_text"
								   android:layout_centerVertical="true"
								   android:layout_below="@id/login_button"
								   android:layout_alignLeft="@id/login_button"
								   android:paddingTop="10dip"
								   />
		</RelativeLayout>
	<include layout="@layout/buttom_buttons_bg"/>
	<include layout="@layout/buttom_buttons"/>
</RelativeLayout>